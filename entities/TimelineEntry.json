{
  "name": "TimelineEntry",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the schedule item"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the event"
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "Date of the event"
    },
    "precision": {
      "type": "string",
      "enum": ["year", "month", "day", "hour", "minute"],
      "default": "day",
      "description": "Precision of the scheduled date"
    },
    "timetableId": {
      "type": "number",
      "description": "Identifier of the timetable this entry belongs to"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags associated with the entry"
    }
  },
  "required": [
    "title",
    "date",
    "precision",
    "timetableId"
  ]
}
